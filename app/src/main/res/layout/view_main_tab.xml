<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="bottom"
              android:clipChildren="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_4"
            android:drawableTop="@mipmap/ic_tab_home"
            android:gravity="center"
            android:text="首页"/>
        <TextView
            android:id="@+id/tv_nearby"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_4"
            android:drawableTop="@mipmap/ic_tab_nearby"
            android:gravity="center"
            android:text="附近"/>
        <ImageView
            android:id="@+id/iv_live"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:layout_gravity="bottom"
            android:src="@mipmap/ic_tab_live"/>
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_4"
            android:drawableTop="@mipmap/ic_tab_message"
            android:gravity="center"
            android:text="消息"/>
        <TextView
            android:id="@+id/tv_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_4"
            android:drawableTop="@mipmap/ic_tab_me"
            android:gravity="center"
            android:text="我的"/>

    </LinearLayout>
</LinearLayout>
